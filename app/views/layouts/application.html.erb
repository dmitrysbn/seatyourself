<!DOCTYPE html>
<html>
<head>
  <title>Seat Yourself!</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <p>
    <% if current_user %>
      Hello <%= current_user.email %>!

      <%= link_to 'Logout', sessions_path, method: :delete %>
      |
      <%= link_to 'Add Restaurant', new_restaurant_path %>
      |
      <%= link_to 'My Profile', users_reservations_path %>
      |
      <%= link_to 'My Restaurants', users_path %>
      |
      <%= link_to"Back to Restaurants", restaurants_path %>


    <% else %>
      <%= link_to 'New User', new_users_path %>
      |
      <%= link_to 'Login', new_sessions_path %>
    <% end %>
  </p>

  <% if flash[:notice] %>
   <p class=“notice”><%= flash[:notice] %></p>
 <% end %>

 <% if flash[:alert] %>
   <p class=“alert”><%= flash[:alert] %></p>
 <% end %>

<%= yield %>

</body>
</html>
