<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>

  <div class='field'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => "text-box" %>
  </div>

  <div class='field'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => "text-box"%>
  </div>

  <div class='field'>
    <%= f.label :email %>
    <%= f.email_field :email, :class => "text-box"%>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password, :class => "text-box"%>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "text-box" %>
  </div>

  <div class="sign-up-btn">
    <%= f.submit 'Sign Up', :class => "button"%>
  </div>

<% end %>
