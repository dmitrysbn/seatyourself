<div class="new-reservation">
  <h3>Add new reservation</h3>

  <%= render 'error', reservation: @reservation %>

  <%= form_for(@reservation) do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </p>

    <p>
      <%= f.label :restaurant_name %>
      <%= f.text_field :restaurant_name %>
    </p>

    <p>
      <%= f.label :date %>
      <%= f.date_field :date %>
    </p>

    <p>
      <%= f.label :time %>
      <%= f.number_field :time %>
    </p>

    <p>
      <%= f.label :number_of_people %>
      <%= f.number_field :number_of_people %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>


<div class="all-restaurants">
  <h1>Featured Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <%= render '/restaurants/restaurant', restaurant: restaurant %>
  <% end %>
</div>
