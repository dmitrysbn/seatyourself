<div class="restaurant">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-0 col-md-3">
      <%= link_to(image_tag(restaurant.url), restaurant_path(restaurant)) %>
      <h4 id="restaurant-name"><%= restaurant.restaurant_name %></h4>
      <p>Open: <%= restaurant.hours_open %></br>
      Close: <%= restaurant.hours_closed %></br>
      Capacity: <%= restaurant.capacity %></br>
      Address: <%= restaurant.address %></br>
      Neighbourhood: <%= restaurant.neighbourhood %></br>
      Price Range: <%= restaurant.price_range %></br>
      Summary: <%= restaurant.summary %></br>
      Website: <%= link_to "#{restaurant.restaurant_name}", "http://#{restaurant.restaurant_url}" %></p>
    </div>  
  </div>
</div>
